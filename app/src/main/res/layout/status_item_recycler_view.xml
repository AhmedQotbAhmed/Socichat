<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="1dp"
        android:background="#BF9C9C9C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/status_image_item"
        app:layout_constraintTop_toBottomOf="@+id/txv_status_date_item"
        app:layout_constraintVertical_bias="0.709" />

    <TextView
        android:id="@+id/txv_my_status_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.152"
        app:layout_constraintStart_toEndOf="@+id/status_image_item"
        app:layout_constraintTop_toTopOf="@+id/status_image_item" />

    <TextView
        android:id="@+id/txv_status_date_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/txv_my_status_item"
        app:layout_constraintStart_toStartOf="@+id/txv_my_status_item"
        app:layout_constraintTop_toBottomOf="@+id/txv_my_status_item" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/status_image_item"
        android:layout_width="70dp"
        android:layout_height="82dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:src="@android:color/black"
        app:civ_border_color="#f8f8f8"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingClass" />
</androidx.constraintlayout.widget.ConstraintLayout>